<%= link_to item_refs_path(params: {category: 'all'}), class: "flex-sm-fill text-sm-center nav-link #{'active' if filter == 'all'}", remote: :true do %>
      ALL
<% end %>
<% categories.each do |category| %>
  <%= link_to item_refs_path(params: {category: category}), class: "flex-sm-fill text-sm-center nav-link #{'active' if filter == category}", remote: :true do %>
  <% count = 0 %>
  <% category.references.each do |reference| %>
    <% count += reference.items.select { |item| item.user == current_user }.count %>
  <% end %>
  <%= category.name.upcase %> (<%= count %>)
  <% end %>
<% end %>
