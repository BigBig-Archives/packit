<<%= link_to item_refs_path(params.merge(category: 0)), class: "", remote: :true do %>
  <%= image_tag "categories/all" %>
  <small><strong>ALL</strong></small>
<% end %>

<% categories.each do |category| %>
  <%= link_to item_refs_path(params.merge(category: category.id)), class: "", remote: :true do %>
    <%= image_tag "categories/#{category.picture}" %>
    <small><%= category.name.upcase %> (<%= count %>)</small>
  <% end %>
<% end %>
