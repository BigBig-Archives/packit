<%= link_to item_refs_path(params: {
  filtered_by_category: false, category: 0, filtered_by_owned: filtered_by_owned, owned: owned_selected
}), class: "nav-link #{'active' unless filtered_by_category}", remote: :true do %> ALL <% end %>
<% categories.each do |category| %>
  <%= link_to item_refs_path(params:
  {filtered_by_category: true, category: category, filtered_by_owned: filtered_by_owned, owned:owned_selected
  }), class: " nav-link #{'active' if category_selected == category}", remote: :true do %>
  <% count = 0 %>
  <% category.references.each do |reference| %>
    <% count += reference.items.select { |item| item.user == current_user }.count %>
  <% end %>
  <%= category.name.upcase %> (<%= count %>)
  <% end %>
<% end %>
