<%= link_to item_refs_path(params: {
  filtered_by_owned: true, owned: -1, filtered_by_category: filtered_by_category, category: category_selected
}), class: "nav-link #{'active' if owned_selected == -1}", remote: :true do %> not owned <% end %>

<%= link_to item_refs_path(params: {
  filtered_by_owned: false, owned: 0, filtered_by_category: filtered_by_category, category: category_selected
}), class: "nav-link #{'active' if owned_selected.zero?}", remote: :true do %> all <% end %>

<%= link_to item_refs_path(params: {
  filtered_by_owned: true, owned: 1, filtered_by_category: filtered_by_category, category: category_selected
}), class: "nav-link #{'active' if owned_selected == 1}", remote: :true do %> owned <% end %>
