<div class="col-3">
  <%= simple_form_for [:user, bag] do |f| %>
    <%= f.input :journey, as: :hidden, input_html: { value: journey.id } %>
    <%= f.input :name %>
    <p data-error="name"></p>
    <%= f.input :capacity %>
    <p data-error="capacity"></p>
    <%= f.button :submit, class: "button" %>
  <% end %>
</div>
