function destroyBag() {
  console.log("destroy bag");

  let container;
  let content;

  <% if @bag.errors.any? %>
    console.log("error(s)");
  <% else %>
    content = document.querySelector("[data-bag=\"<%= @bag_id %>\"]");
    content.parentElement.removeChild(content);
    // refresh list
    container = document.querySelector("#packed-bags");
    content = `<%= j render 'user/bags/packed_bags' %>`;
    container.innerHTML = content;
    // refresh indications
    container = document.querySelector("#indications");
    content =`<%= j render 'user/bags/indications' %>`;
    container.innerHTML = content;
  <% end %>
}

destroyBag();
