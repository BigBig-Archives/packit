<%= simple_form_for [:user, new_bag], remote: :true do |f| %>
  <%= f.input :reference, as: :hidden, input_html: { value: reference.id } %>
  <%= f.input :journey, as: :hidden, input_html: { value: journey.id } %>
  <%= f.input :name, input_html: { value: reference.name } %>
  <%= f.input :custom_size, input_html: { value: reference.size } %>
  <%= f.input :custom_weight, input_html: { value: reference.weight } %>
  <%= f.input :custom_capacity, input_html: { value: reference.capacity } %>
  <%= f.button :submit, class: "button" %>
<% end %>
