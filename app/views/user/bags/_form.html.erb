<div class="col-3">
  <%= simple_form_for [:user, bag] do |f| %>
    <%= f.input :template, as: :hidden, input_html: { value: template.id } %>
    <%= f.input :journey, as: :hidden, input_html: { value: journey.id } %>
    <%= f.input :name, input_html: { value: template.name } %>
    <p data-error="name"></p>
    <%= f.input :capacity, input_html: { value: template.capacity.round, min: '0',  max: '99', step: '1' } %>
    <p data-error="capacity"></p>
    <%= f.button :submit, class: "button" %>
  <% end %>
</div>
