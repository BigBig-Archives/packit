<%= simple_form_for [:user, new_bag], remote: :true do |f| %>
  <%= f.input :reference_id, as: :hidden, input_html: { value: bag_ref.id } %>
  <%= f.input :name, input_html: { value: bag_ref.name } %>
  <%= f.input :custom_size, input_html: { value: bag_ref.size } %>
  <%= f.input :custom_weight, input_html: { value: bag_ref.weight } %>
  <%= f.input :custom_capacity, input_html: { value: bag_ref.capacity } %>
  <%= f.button :submit, class: "button" %>
<% end %>
