<% if @bag.errors.any? %>
  <% @bag.errors.messages.each do |key, value| %>
    container = document.querySelectorAll("[data-error=\"<%= j key.to_s %>\"]");
    content = `<%= j value.first.to_s %>`;
    for(let i = 0; i < container.length; i++){
      container[i].innerHTML = content;
    }
  <% end %>
<% else %>
  container = document.querySelector("#bags-container > .row");
  content = `<%= j render 'bag_to_pack', bag: @bag %>`;
  container.insertAdjacentHTML('afterbegin', content);
<% end %>


