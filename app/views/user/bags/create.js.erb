function createBag() {
  console.log("create bag");

  let form;
  let container;
  let content;

  <% if @bag.errors.any? %>
    form = document.querySelector(".bag-form-create");
    console.log("error(s)");
    <% @bag.errors.messages.each do |key, value| %>
      container = form.querySelector("[data-error=\"<%= j key.to_s %>\"]");
      content = `<%= j key.to_s %> <%= j value.first.to_s %>` ;
      container.innerHTML = content;
    <% end %>
  <% else %>
    // refresh list
    container = document.querySelector("#packed-bags");
    content = `<%= j render 'user/bags/bags_list' %>`;
    container.innerHTML = content;
    // refresh indications
    container = document.querySelector("#indications");
    content =`<%= j render 'user/bags/indications' %>`;
    container.innerHTML = content;
  <% end %>
}

createBag();
