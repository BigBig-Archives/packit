<%= link_to user_items_path(params: { filtered_by_category: false, category: 0 }), class: "
#{'active' unless filtered_by_category}", remote: :true do %>
  <%= image_tag "categories/all" %>
  <small><strong>ALL</strong></small>
<% end %>
<% categories.each do |category| %>
  <%= link_to user_items_path(params:
  {filtered_by_category: true, category: category }), class: "#{'active' if category_selected == category}", remote: :true do %>
  <% count = 0 %>
  <% category.references.each do |reference| %>
    <% count += reference.items.select { |item| item.user == current_user }.count %>
  <% end %>
  <%= image_tag "categories/#{category.picture}" %>
  <small><%= category.name.upcase %> (<%= count %>)</small>
  <% end %>
<% end %>
