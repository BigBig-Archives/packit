<%= link_to user_packed_bag_path(@packed_bag, params: {
  category:  0,
  direction: params[:direction],
  group:     params[:group] }),
  class: "" do %>
  <% if params[:category].to_i.zero? %>
    <small class="category-selected">ALL</small>
  <% else %>
    <small>ALL</small>
  <% end %>
<% end %>

<small> - </small>

<% categories.each do |category| %>
  <%= link_to user_packed_bag_path(@packed_bag, params: {
    category:  category.id,
    direction: params[:direction],
    group:     params[:group] }),
    class: "" do %>
    <% if params[:category].to_i == category.id %>
      <small class="category-selected"><%= category.name.upcase %></small>
    <% else %>
      <small><%= category.name.upcase %></small>
    <% end %>
  <% end %>
  <small> - </small>
<% end %>
