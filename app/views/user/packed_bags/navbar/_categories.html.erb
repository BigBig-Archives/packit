<%= link_to user_packed_bag_path(@packed_bag, params: { cat:  0, ope: @ope, dis: @dis }),
class: "category #{'selected' if @cat.to_i.zero? || @cat.nil?}", remote: :true do %>
  <%= image_tag "categories/all", class: "picture" %>
  <p>ALL</p>
<% end %>
<% @categories.each do |category| %>
  <% unless category.references.empty? %>
    <%= link_to user_packed_bag_path(@packed_bag, params: { cat: category.id, ope: @ope, dis: @dis }),
    class: "category #{'selected' if @cat.to_i == category.id}", remote: :true do %>
      <%= image_tag "categories/#{category.picture}", class: "picture" %>
      <p><%= category.name.upcase %></p>
    <% end %>
  <% end %>
<% end %>
