<%= link_to user_packed_bag_path(@packed_bag, params: { display: 'group' }),
remote: :true, class: "display #{'selected' if session[:display] == 'group'}" do %>
  <%= image_tag "interface/group_items", class: "picture" %>
  <p>GROUPED</p>
<% end %>
<%= link_to user_packed_bag_path(@packed_bag, params: { display: 'ungroup' }),
remote: :true, class: "display #{'selected' if session[:display] == 'ungroup'}" do %>
