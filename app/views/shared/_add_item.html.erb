<!-- new_item, reference -->

<%= simple_form_for ([:user, new_item]), html: {class: 'simple-action'} do |f| %>
  <%= f.input :reference_id, as: :hidden, input_html: { value: reference.id } %>
  <% if customize %>
      <%= f.input :custom_size %>
      <%= f.input :custom_weight %>
      <%= f.input :commentary %>
  <% end %>
  <%= f.submit '+', class: 'back back-primary' %>
<% end %>
